{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "dist/@types",
    "sourceMap": true,
    "strict": true,
    "allowJs": false,
    "jsx": "react",
    "esModuleInterop": true,
    "moduleResolution": "Bundler"
  },
  "include": [
    "src/**/*",
    "webpack.config.js"
  ],
  "exclude": [
    "node_modules", 
    "dist"
  ]
}